<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>main.encode.EncodingFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>main.myLogin.loginFilter.LoginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>GeneralTieziFilter</filter-name>
        <filter-class>main.Tiezi.generalTieziFilter.GeneralTieziFilter</filter-class>
    </filter>



    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <servlet-name>*</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <servlet-name>PublishTieziServlet</servlet-name>
        <servlet-name>TieziReplyServlet</servlet-name>
        <url-pattern>/userConfig/userConfig.jsp</url-pattern>
        <url-pattern>/userConfig/setPassword.jsp</url-pattern>
        <url-pattern>/userConfig/userTiezi.jsp</url-pattern>
        <servlet-name>UserTieziServlet</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>GeneralTieziFilter</filter-name>
        <url-pattern>/general/general.jsp</url-pattern>
    </filter-mapping>



    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <listener>
        <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>RegistServlet</servlet-name>
        <servlet-class>main.myRegist.regist.RegistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistServlet</servlet-name>
        <url-pattern>/RegistServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteTieziServlet</servlet-name>
        <servlet-class>main.Tiezi.deleteTiezi.DeleteTieziServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteTieziServlet</servlet-name>
        <url-pattern>/DeleteTieziServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteReplyServlet</servlet-name>
        <servlet-class>main.Tiezi.deleteReply.DeleteReplyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteReplyServlet</servlet-name>
        <url-pattern>/DeleteReplyServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TieziReplyServlet</servlet-name>
        <servlet-class>main.Tiezi.tieziReply.TieziReplyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TieziReplyServlet</servlet-name>
        <url-pattern>/TieziReplyServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GeneralKanTieServlet</servlet-name>
        <servlet-class>main.Tiezi.generalKanTie.GeneralKanTieServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GeneralKanTieServlet</servlet-name>
        <url-pattern>/GeneralKanTieServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>VerifyCodeServlet</servlet-name>
        <servlet-class>main.myRegist.regist.VerifyCodeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserTieziServlet</servlet-name>
        <servlet-class>main.userConfig.userTiezi.UserTieziServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserTieziServlet</servlet-name>
        <url-pattern>/UserTieziServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SetPasswordServlet</servlet-name>
        <servlet-class>main.userConfig.setPassword.SetPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SetPasswordServlet</servlet-name>
        <url-pattern>/SetPasswordServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>main.myLogin.login.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginOutServlet</servlet-name>
        <servlet-class>main.myLogin.login.LoginOutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PublishTieziServlet</servlet-name>
        <servlet-class>main.Tiezi.publishTiezi.PublishTieziServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginIPServlet</servlet-name>
        <servlet-class>main.myLogin.login.LoginIPServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GeneralTieziServlet</servlet-name>
        <servlet-class>main.Tiezi.generalTiezi.GeneralTieziServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GeneralTieziServlet</servlet-name>
        <url-pattern>/GeneralTieziServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginIPServlet</servlet-name>
        <url-pattern>/LoginIPServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PublishTieziServlet</servlet-name>
        <url-pattern>/PublishTieziServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginOutServlet</servlet-name>
        <url-pattern>/LoginOutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyCodeServlet</servlet-name>
        <url-pattern>/VerifyCodeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.form</url-pattern>
    </servlet-mapping>
</web-app>